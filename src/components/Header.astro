---
import Case from "case";

export const navItems = [
  "rehearsal-space",
  "recording-studio",
  "equipment-hire",
];
---

<header>
  <a href="/" class="logo"
    ><img src="../../public/logo.png" alt="clang logo" /></a
  >

  <nav>
    {navItems.map((item) => (
      <a href={item}>
        <h3>{Case.upper(item)}</h3>
      </a>
    ))}
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: row;
  }

  .logo {
    margin: 0;
    padding: 0;
    line-height: 0;
    flex: 1;
    width: 25vw;
  }

  nav {
    align-self: flex-end;
  }

  nav a h3 {
    margin: auto 0 0 0;
    padding: 0.1rem 1rem;
  }
  nav a {
    color: var(--text) !important;
    display: inline-block;
    text-decoration: none;
    transition: 0.4s;
  }
  @media only screen and (max-width: 720px) {
    nav a {
      margin: 0;
      padding: 0;
      font-size: calc(calc(var(--base-fontsize) * var(--header-scale)) * 0.9);
    }
    nav {
      padding: 0;
      text-align: left;
      margin-left: 1.5rem;
      flex-direction: column;
    }
  }
  header nav a h3:last-child {
    padding-right: 0;
  }
  header nav a h3:first-child {
    padding-right: 0;
  }

  @media only screen and (max-width: 720px) {
    header {
      margin-top: 0.5rem;
      padding-top: 0;
      width: 100vw;
    }
    .logo {
      width: 350px;
    }
  }

  @media only screen and (max-width: 1600px) {
    header nav a {
      width: 200px;
      padding-left: 0;
      padding-right: 0;
    }
  }

  @media only screen and (max-width: 1400px) {
    header {
      flex-direction: column;
    }
    .logo {
      width: 450px;
      align-self: center;
    }
    nav {
      margin-top: 1rem;
      align-self: center;
    }
    header nav a {
      width: 100%;
    }
  }
</style>
