---
import Case from "case";

export const navItems = [
  "rehearsal-space",
  "recording-studio",
  "equipment-hire",
  "events",
];
---

<nav>
  {navItems.map((item) => (
    <h3>
      <a href={item}>{Case.upper(item)}</a>
    </h3>
  ))}
</nav>

<style>
  nav {
    margin-left: auto;
    flex-direction: row;
  }
  nav h3:last-child a {
    padding-right: 0;
  }
  nav h3:first-child a {
    padding-left: 0;
  }
  @media only screen and (max-width: 720px) {
    h3 {
      margin: 0;
      padding: 0;
      font-size: calc(calc(var(--base-fontsize) * var(--header-scale)) * 0.9);
    }
    nav {
      padding: 0;
      text-align: left;
      margin-left: 1.5rem;
      flex-direction: column;
    }
  }
</style>
